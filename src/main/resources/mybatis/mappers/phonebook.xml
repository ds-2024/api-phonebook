<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">

  <!-- 번호받고 저장하기 ajax -->
   <insert id="insertSelectKey" parameterType="com.javaex.vo.PersonVo">
      <![CDATA[   
          insert into person
          values ( null, #{name}, #{hp}, #{company})
       ]]>
       <selectKey keyProperty="personId" resultType="int" order="AFTER">   
          <![CDATA[
            select last_insert_id()
            ]]>
      	</selectKey>
       
   </insert>
   
    <!-- 데이터1개 가져오기 -->
   <select id="selectOne" parameterType="int" resultType="com.javaex.vo.PersonVo">
      <![CDATA[
         select  person_id as personId,
                 name,
                 hp,
                 company            
         from person
         where person_id = #{no}
      ]]>   
   </select>
	

	<!-- 전체리스트 -->
	<select id="selectList" resultType="com.javaex.vo.PersonVo">
       
         <![CDATA[
			select  person_id as personId,
					name,
			        hp,
			        company
			from person
			order by person_id desc		
		 ]]>

	</select>
	
	<!-- 삭제 -->
   <insert id="delete" parameterType="com.javaex.vo.PersonVo">
      <![CDATA[ 
         delete from person
         where person_id = #{no}
       
      ]]>
   </insert>
   
   <!-- 회원정보수정폼 -->
	<select id="selectOneByNo" parameterType="int" resultType="com.javaex.vo.PersonVo">
		<![CDATA[ 
			select  person_id as personId,
					name,
			        hp,
			        company
			from person
			where person_id = #{no}
		]]>
	</select>
	
	<!-- 회원정보수정 -->
	<update id="update" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[ 
			update person
			set name = #{name},
				hp = #{hp},
				company = #{company}
			where person_id = #{no}
		]]>
	</update>
   
   

</mapper>